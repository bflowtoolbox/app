<Window x:Class="bflow.setup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bflow.setup"
        xmlns:views="clr-namespace:bflow.setup.Views"
        xmlns:viewModel = "clr-namespace:bflow.setup.ViewModel" 
        mc:Ignorable="d"
        
        Title="bflow* Toolbox 1.5.0 Installation" 
        Height="363" 
        Width="555" 
        Icon="images/bee.ico" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <!--Closing="OnHandleExitButtonClick"-->
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FF5FBFFF"/>
            <GradientStop Color="White" Offset="1"/>
            <GradientStop Color="#FFF1F9FF" Offset="0.893"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <views:InstallerView x:Name = "InstallerViewControl" Loaded = "InstallerViewControl_Loaded"/>
    </Grid>
</Window>
