<Window x:Class="bflow.setup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bflow.setup"
        mc:Ignorable="d"
        Title="bflow* Toolbox 1.5.0" Height="450" Width="800">
    <StackPanel Margin="10">
        <Image Source="bflow-logo.png" Height="50" HorizontalAlignment="Left"/>
        <TextBlock Margin="0,20,0,0" Width="400" TextWrapping="Wrap" HorizontalAlignment="Left">Installationsanleitung für <Bold>bflow* Toolbox 1.5.0</Bold><LineBreak />Klicken Sie auf <Italic>Weiter</Italic></TextBlock>
        <Label Content="Installationspfad" Margin="0,20,0,0"/>
        <TextBox Name="textName" Width="300" HorizontalAlignment="Left" Text="C:\\" />
        <Button Click="OnOpenFolderClick" Margin="0, 10, 0, 0" HorizontalAlignment="Left" Content="Ordner wählen" />
        <Label Content="Sprache" Margin="0,10,0,0" />
        <ComboBox Width="200" HorizontalAlignment="Left">
            <ComboBoxItem IsSelected="True">Deutsch</ComboBoxItem>
            <ComboBoxItem>Englisch</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</Window>
